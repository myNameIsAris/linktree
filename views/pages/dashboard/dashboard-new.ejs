        <!-- demo app -->
        <script>
            const act = '<%= activity %>'
            const result= JSON.parse(act.replace(/&#34;/g, '"').replace(/&quot;/g, '"'))
            
            const series = []
            let labels = []
            const colors = []
            const datasets = []

             // Create Label
            for (const d of result) {
                for (const act of Object.keys(d.activity)) {
                labels.push(act)
                }
            }

            labels = [...new Set([...labels])]
            labels.sort((a, b) => {
                const dateA = new Date(a)
                const dateB = new Date(b)
                return dateA - dateB
            })

            let x = 0
            for (const d of result) {
                const tempData = []
                for (const label of labels) {
                    if (d.activity[label]) tempData.push(d.activity[label])
                    else tempData.push(0)
                }
                const obj = {
                    name : d.title,
                    data : tempData,
                }
                series.push(obj)
                x++
            }

            labels = labels.map(lbl => {
                return formatDate(lbl)
                const time = lbl.split('-')
                for (let i = 0; i < time.length; i++) if (time[i].length < 2) time[i] = '0' + time[i]
                const [year, month, day] = time
                return `${day}-${month}-${year}`
            })

            console.log({labels})

            var options = {
                series,
                chart: {
                    height: 350,
                    type: 'area',
                    zoom: {
                        enabled: false
                    }
                },
                dataLabels: {
                    enabled: false
                },
                stroke: {
                    curve: 'smooth'
                },
                xaxis: {
                    type: 'category',
                    categories: labels
                },
            }
            var chart = new ApexCharts(document.querySelector("#sessions-overview"), options)
            chart.render()


            function formatDate(inputDate) {
                const options = { day: 'numeric', month: 'short', year: 'numeric' }
                const formattedDate = new Date(inputDate).toLocaleDateString('en-US', options)
                return formattedDate.replace(',', '')
            };
        </script>
